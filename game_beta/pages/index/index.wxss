/**index.wxss**/
.container .broadcast {
    width: 100%;
    height: 70rpx;
    background-color: black;
}

.container .broadcast .messageBox {
    display: flex;
    justify-content: space-between;
}

.container .broadcast .guangbo {
    width: 22rpx;
    height: 26rpx;
    transform: translateY(24rpx);
    padding-left: 36rpx;
    padding-right: 26rpx;
}

.container .broadcast .messageTitle {
    width: 100%;
    height: 70rpx;
    font-size: 26rpx;
    color: #dadada;
    line-height: 70rpx;
}

.container .broadcast .messageTitle .title {
    display: inline-block;
}

.container .broadcast .messageTitle .money {
    display: inline-block;
}

.container .broadcast .close {
    width: 22rpx;
    height: 26rpx;
    padding-right: 30rpx;
    transform: translateY(24rpx);
}

.container .tabs {
    height: 80rpx;
    display: flex;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #666;
}

.container .tabs .tabs-list {
    width: 100%;
    text-align: center;
    border-bottom: 1px solid #d9d9d9;
    background: #f1f1f1;
}

.active {
    color: #00c853;
    font-weight: bold;
    background: none !important;
    border-bottom: none !important;
}

.swiper-box .main {
    height: 80rpx;
    display: flex;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #999;
    padding-left: 30rpx;
}

.swiper-box .main .main-list {
    float: left;
    padding: 0 20rpx;
}

.swiper-box .main .main-list .num {
    width: 28rpx;
    height: 28rpx;
    display: inline-block;
    border-radius: 50%;
    font-size: 24rpx;
    line-height: 28rpx;
    text-align: center;
    background: #999;
    color: white;
    transform: translateX(10rpx);
}

.maintab {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #d9d9d9;
    align-items: center;
}

.maintab .filtrate {
    width: 34rpx;
    height: 34rpx;
    transform: translateX(80rpx);
}

.maintab .explain {
    width: 34rpx;
    height: 34rpx;
    margin-right: 30rpx;
}

.mainActive {
    color: #00c853;
    border-bottom: 3px solid #00c853;
}

.innum {
    background: red !important;
}

.swiper-twobox {
     width: 100%;
     height: 100%; 
}

.time {
    display: flex;
    height: 100%; 
}

.time .time-bar {
    width: 45%;
    color: #a9a9a9;
    font-size: 24rpx;
    text-align: center;
    background-image: url("http://api.beta.haokeshuyu.com/m/ny3G/game-beta/img/classify_bg.png");
}

.time .time-bar .timelist {
    height: 94rpx;
    padding-top: 20rpx;
    line-height: 36rpx;
    border-bottom: 1px solid #d9d9d9;
}

.col {
    color: #00c853;
    background: #fff;
}

.time .time-nav {
    width: 100%;
    overflow-y: auto;
    padding:0 20rpx;
}

.time .time-nav .nav-list {
    border-bottom: 1px solid #d9d9d9;
    padding: 20rpx 0;
    font-size: 24rpx;
    color: #8c8c8c;
}

.match-time{
    border:1px solid red;
    padding: 10rpx 5rpx;
}

.match-time .top{
    height: auto;
    display: block;
    border:1px solid green;
}

.match-time .top .league_name{
    color: #8c8f10;
    padding: 10rpx 5rpx;
    border:1px solid purple
}

